@model IEnumerable<Workloud.Challenge.WebApplication.ViewModels.EmployeeSkillViewModel>

@{
    ViewBag.Title = "Get";
}

<h2>Employee Skills</h2>

<p>
    @Html.ActionLink("Add Skill", "Create", new { id = ViewBag.EmployeeId }, new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>       
        <th>
            @Html.DisplayNameFor(model => model.Skill)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>       
        <td>
            @Html.DisplayFor(modelItem => item.Skill)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeSkillId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
